= title(t('pages.spawns'))

%p
  = t('modules.spawns.text')

:xml
  <spawns>
    <!-- Spectator spawn -->
    <spawn>
      <regions>
        <point look="18,32,22">32.5, 42, 26.5</point>
        <cuboid yaw="45" min="38, 50, 42" max="28, 40, 32" />
      </regions>
    </spawn>

    <!-- Team spawns -->
    <spawn team="lime-team" look="18,32,22" region="lime-spawn"/>
    <spawn team="purple-team" look="18,32,22" region="purple-spawn"/>
  </spawns>

= attribute_table((t'modules.spawns.attributes')) do
  = attribute_row do
    = attribute_name('team')
    = attribute_desc(t('modules.spawns.attributes_team'))
    = attribute_type_element(:team)
    = attribute_column
  = attribute_row(true) do
    = attribute_name('region')
    = attribute_desc(t('modules.spawns.attributes_region'), t('modules.spawns.attributes_region2'))
    = attribute_type_element(:region, 'Bounded region')
    = attribute_column
  = attribute_row(true) do
    = attribute_name('&lt;regions&gt;')
    = attribute_desc(t('modules.spawns.attributes_regions'))
    = attribute_type_element(:region, 'Bounded region')
    = attribute_column
  = attribute_row do
    = attribute_name('look')
    = attribute_desc(t('modules.spawns.attributes_look'), t('modules.spawns.attributes_look2'))
    = attribute_type(:xyz)
    = attribute_column
  = attribute_row do
    = attribute_name('yaw')
    = attribute_desc(t('modules.spawns.attributes_yaw'))
    = attribute_type do
      [-180, 180]
    = attribute_default(0)
  = attribute_row do
    = attribute_name('pitch')
    = attribute_desc(t('modules.spawns.attributes_pitch'))
    = attribute_type do
      [-90, 90]
    = attribute_default(0)
  = attribute_row do
    = attribute_name('mode')
    = attribute_desc(t('modules.spawns.attributes_mode'))
    = attribute_column do
      = link_to t('modules.spawns.selection_mode'), '#selection_mode'
    = attribute_default('random')

= subtitle(t('modules.spawns.regions'))
%p
  = t('modules.spawns.regions_text')

:xml
  <spawns>
    <spawn yaw="45" team="lime">
      <regions>
        <circle look="0, 0, 0" center="17, 50, 13" radius="6"/> <!-- yaw/pitch towards 0, 0, 0 -->
        <cuboid min="13, 50, 15" max="10, 49, 16"/> <!-- yaw is 45 -->
      </regions>
    </spawn>
  </spawns>

= subtitle(t('modules.spawns.selection_mode'))
%ul
  %li
    %code random
    \-
    = t('modules.spawns.selection_random')
  %li
    %code safe
    \-
    = t('modules.spawns.selection_safe')
  %li
    %code spread
    \-
    = t('modules.spawns.selection_spread')

= subtitle(t('modules.spawns.respawn_behavior'))
%p
  = t('modules.spawns.respawn_behavior_text')
  
= attribute_table((t'modules.spawns.spawns_attributes')) do
  = attribute_row do
    = attribute_name('respawn-delay')
    = attribute_desc(t('modules.spawns.attributes_respawn_delay'))
    = attribute_type(:duration)
    = attribute_default('2s')
  = attribute_row do
    = attribute_name('auto-respawn')
    = attribute_desc(t('modules.spawns.attributes_auto_respawn'))
    = attribute_type(:boolean)
    = attribute_default('false')
  = attribute_row do
    = attribute_name('respawn-freeze')
    = attribute_desc(t('modules.spawns.attributes_respawn_freeze'))
    = attribute_type(:boolean)
    = attribute_default('true')