:xml
  <!-- a black banner with a silver border and red skull -->
  <item material="banner" color="black">
    <pattern color="red">skull</pattern>
    <pattern color="silver">border</pattern>
  </item>

:xml
  <locales>
    <locale lang="en">
      <special-sword>Stone Dagger</special-sword>
      <special-sword-1>Small, but deadly. It's said to</special-sword-1>
      <special-sword-2>have been used to slay dragons.</special-sword-2>
    </locale>
    <locale lang="sv">
      <special-sword>Sten knivar</special-sword>
      <special-sword-1>Liten, men dödlig. Det är sagt att</special-sword-1>
      <special-sword-2>den har använts till att döda drakar.</special-sword-2>
    </locale>
  </locales>

  <!-- a special sword that's unbreakable and has enchantments and localized name/lore -->
  <item material="stone sword" name="^b{special-sword}" unbreakable="true" flags="hide enchants">
    <lore>^c{special-sword-1}</lore>
    <lore>^c{special-sword-2}</lore>
    <enchantment level="3">damage all</enchantment>
    <enchantment level="1">knockback</enchantment>
  </item>


