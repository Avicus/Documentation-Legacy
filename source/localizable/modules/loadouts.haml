:xml
  <loadouts>
    <loadout id="default">
      <helmet material="iron helmet"/>
      <chestplate materal="leather chestplate" team-color="true">
        <enchantment level="2">protection all</enchantment>
      </chestplate>

      <item slot="0" material="stone sword"/>
      <item slot="1" material="bow"/>
      <item slot="8" material="arrow" amount="16"/>
