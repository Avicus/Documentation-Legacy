= title(t('pages.items_and_drops'))

%p
  = t('modules.items_and_drops.text')

:xml
  <items>
    <!-- remove all glass and wood when dropped -->
    <remove-drops>
      <any>
        <material>glass</material>
        <material>wood</material>
      </any>
    </remove-drops>

    <!-- repair some items on pickup -->
    <repair-tools>
      <any>
        <material>stone sword</material>
        <material>leather helmet</material>
        <material>leather chestplate</material>
      </any>
    </repair-tools>

    <!-- keep diamond sword in inventory after death -->
    <keep-items>
      <any>
        <material>diamond sword</material>
      </any>
    </keep-items>

    <!-- keep diamond helmet in inventory after death -->
    <keep-armor>
      <any>
        <material>diamond helmet</material>
      </any>
    </keep-armor>
  </items>

%h4
  = t('modules.items_and_drops.desc')

= attribute_table(t('modules.items_and_drops.sub-types'), false, [t('table.name'), t('table.description')]) do
  = attribute_row do
    = attribute_name('remove-drops')
    = attribute_desc(t('modules.items_and_drops.drops-desc'))
  = attribute_row do
    = attribute_name('keep-items')
    = attribute_desc(t('modules.items_and_drops.items-desc'))
  = attribute_row do
    = attribute_name('keep-armor')
    = attribute_desc(t('modules.items_and_drops.armor-desc'))
  = attribute_row do
    = attribute_name('repair-tools')
    = attribute_desc(t('modules.items_and_drops.tools-desc'))
