<!doctype html>
%html
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}/
    %link{:href => '/favicon.ico?v=3', :rel => 'icon', :type => 'image/x-icon'}/
    = stylesheet_link_tag('all')
    = stylesheet_link_tag('//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    = javascript_include_tag('all')

    %title
      - if content_for?(:title)
        = yield_content(:title) + ' Â» Atlas Map Documentation'
      - else
        = 'Atlas Map Documentation'
  %body{:class => page_classes}

    %header.navbar.navbar-default
      .container
        .navbar-header
          %a.navbar-brand{:href => '/'}
            = image_tag 'logo.png', :width => '50'
            Atlas Map Documentation
          %button.navbar-toggle{:type => 'button', 'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %nav.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li{:class => current_page.url.length <= 4 ? 'active' : ''}
              = link('/') do
                %i.fa.fa-home
                Home
            %li{:class => current_page.url.include?('/elements') ? 'active' : ''}
              = link('/elements/map') do
                %i.fa.fa-cubes
                Elements
            %li{:class => current_page.url.include?('/references') ? 'active' : ''}
              = link('/references/colors') do
                %i.fa.fa-book
                References
            %li{:class => current_page.url.include?('/examples') ? 'active' : ''}
              = link('/examples') do
                %i.fa.fa-gear
                Examples

    = yield

    = partial 'layouts/footer'